!	URxvt Appearance
!fonts to use
!URxvt.*.font: xft:SauceCodePro Nerd Font Mono:style=Regular:size=10
!URxvt.*.boldFont: xft:SauceCodePro Nerd Font Mono:style=Bold:size=10
!URxvt.*.italicFont: xft:SauceCodePro Nerd Font Mono:style=Italic:size=10
!URxvt.*.boldItalicFont: xft:SauceCodePro Nerd Font Mono:style=Bold Italic:size=10
URxvt.*.font: xft:SFMono Nerd Font Mono:style=Regular:size=10
URxvt.*.boldFont: xft:SFMono Nerd Font Mono:style=Bold:size=10
URxvt.*.italicFont: xft:SFMono Nerd Font Mono:style=Italic:size=10
URxvt.*.boldItalicFont: xft:SFMono Nerd Font Mono:style=Bold Italic:size=10

!space between characters
URxvt.letterSpace: -1
!space between characters vertically
URxvt.lineSpace: 0
!window geometry
URxvt.geometry: 92x24
URxvt.internalBorder: 5
URxvt.cursorBlink: true
URxvt.cursorUnderline: false

URxvt*scrollBar:         false
URxvt*transparent:       false

Xft*antialias: true
/* *antialias: false */
*autohint:   false

!urgency hint for the wm on receipt of a bell character
URxvt.urgentOnBell: true
URxvt.depth: 32
URxvt.iso14755: false

!Native transparency
!URXvt*transparent: true
!URxvt*inheritPixmap: true
! shading - 0 to 99 darkens, 101 to 200 lightens.
!   Do not use with tintColor just use a darker or lighter color instead.
!URxvt*shading: 180

!	Settings

URxvt.scrollstyle: plain

!scrollback buffer lines
URxvt*saveLines: 16384
! Disable printing the terminal contents when pressing PrintScreen.
URxvt.print-pipe: "cat > /dev/null"

!Extensions
URxvt.perl-ext-common: default,url-select,keyboard-select,resize-font,52-osc

!	Bindings

!CopyPastetoClipboard
/* URxvt.keysym.M-c: perl:clipboard:copy */
/* URxvt.keysym.M-v: perl:clipboard:paste */
/* URxvt.matcher.button: 1 */
/* URxvt.matcher.rend.0: Uline Bold fg5 */
/* URxvt.keysym.C-Delete: perl:matcher:last */
/* URxvt.keysym.M-Delete: perl:matcher:list */
!Url-select
URxvt.colorUL: #4682B4
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.button: 1
URxvt.url-select.launcher: firefox
URxvt.url-select.underline: true
!keyboard-select
URxvt.keysym.M-e: perl:keyboard-select:activate
URxvt.keyboard-select.clipboard: true
!font-resize
URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-equal:     resize-font:bigger
URxvt.keysym.C-plus:      resize-font:reset
URxvt.keysym.C-question:  resize-font:show
