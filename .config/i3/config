#-------- Reload mode{{{
# Set the shortcuts and what they do
set $mode_reload Reload (i) i3wm (p) polybar, (x) Xresource, (r) redshift, (Shift+r) redshift_kill, (c) picom
mode "$mode_reload" {
bindsym i restart 
bindsym p exec --no-startup-id ~/.scripts/polybar/reloadpolybar.sh
bindsym x exec --no-startup-id "xrdb -load ~/.Xresources"
bindsym c exec --no-startup-id $picom_start
bindsym r exec --no-startup-id $redshift_start
bindsym Shift+r exec --no-startup-id $redshift_kill

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "$mode_reload" 
# }}}
