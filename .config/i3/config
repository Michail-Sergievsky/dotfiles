exec --no-startup-id $term -name dropdown_qalc -e 'qalc'
bindsym $mod+semicolon [class="^URxvt$" instance="^dropdown_qalc"] scratchpad show; [class="^URxvt$" instance="^dropdown_qalc"] move position center
